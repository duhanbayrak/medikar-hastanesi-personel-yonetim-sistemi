<%- include('partials/header') %>
    <div class="row ">
        <div class="slider col col-lg-12">
            <div id="carouselExampleIndicators" class="carousel slide mt-2 w-100" data-ride="carousel"
                data-interval="5000">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" 
                            src="http://www.medikarhastanesi.com/wp-content/uploads/2021/08/webslidednm_-2.jpg"
                            alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100"
                            src="http://www.medikarhastanesi.com/wp-content/uploads/2021/08/webslidednm_-1.jpg"
                            alt="4.slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100"
                            src="http://www.medikarhastanesi.com/wp-content/uploads/2021/08/webslidednm_.jpg"
                            alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100"
                            src="http://www.medikarhastanesi.com/wp-content/uploads/2021/07/webslide.jpg"
                            alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100"
                            src="http://www.medikarhastanesi.com/wp-content/uploads/2021/07/ozonwebslide2.jpg"
                            alt="4.slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="duyuru col">
            <div class="alert alert-secondary mt-2" role="alert">
                <div style="display: flex; justify-content: center;  color:#012443;">
                    <h1 style="text-align: center;">Duyurular</h1>
                    <div class="nav-link" style=" position: absolute; right: 0; border-bottom: 1px solid #012443;" id="tarih"></div>
                </div>
                <hr>
                <% const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'}; %> 
                <% var duyurular=duyuru.slice(0,5) %>
                    <% duyurular.forEach(e=> { %>
                        <div class="col-lg-12">
                             <h4 style="color: brown;"> <%=e.baslik %> </h4> 
                             <h6 style="float: right; position: absolute; top: 0; right: 20px;">Eklenme Tarihi: <%= e.date.toLocaleDateString('tr-TU',options) %></h6>
                             <h6 style="float: right; position: absolute; top: 0; right: 0;"><%=  e.date.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})%> </h6>
                        </div>
                        <div class="col-lg-9" >
                            <div>
                                <h5 style="color:#012443;">
                                    -<%= e.department %>
                                </h5>
                                <%- e.bilgi %>
                            </div>
                            <br><hr>
                        </div>
                        <% }) %>
                       
            </div>
        </div>
    </div>
    <script>
        var tarih = new Date();

        var gunler = ["Pazar", "Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi"];
        var day = tarih.getDate();
        var month = tarih.getMonth();
        var year = tarih.getFullYear();

        if (day < 10) {
            day = "0" + tarih.getDate();
        }
        if (month < 10) {
            month = "0" + Number(tarih.getMonth() + 1);
        }

        document.getElementById("tarih").innerHTML += `
    <h3>${day}.${month}.${year} ${gunler[tarih.getDay()]}</h3>
    `;

    </script>
    <%- include('partials/footer') %>