<%- include('partials/header') %>

<br>

<div class="container">
    <div class="row">
        <div class="col-md-6 m-auto">
            <h1 class="text-center display-4 my-4">Doküman Ekle</h1>
            <form action="/upload" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="dosyaAd">Doküman Adı</label>
                    <input class="form-control form-control-lg" id="dosyaAd" placeholder="Doküman Adı" type="text" name="dosyaAd" required>
                </div>
                <div>
                    <label for="document" class="form-label">Dosya Seçin</label>
                    <input class="form-control form-control-lg" id="document" type="file" name="document" style="cursor: pointer;">
                  </div>
                  <br>
                <input type="submit" value="Ekle" class="btn btn-info btn-block">
            </form>
            <hr>
        </div>
    </div>
   
</div>



